@{
    ViewData["Title"] = "Login";
    Layout = "_UserAuthLayout";
}

<div class="container ">
    <div class="row justify-content-center align-items-center" style="height: 100vh">
        <div class=" col-md-6">
            <div class="card" style="border-radius: 25px;">
                <!-- app Logo -->
                <div class="text-center mt-5">
                    <!-- redirects to the home page -->
                    <a href="@Url.Action("Index", "Home")">
                        <img src="~/assets/images/general/appLogo.png" alt="Logo" style="max-width: 250px;">
                    </a>
                </div>

                <!-- card content  -->
                <div class="card-body">
                    <!-- Welcome text and subtitle -->
                    <h1 class="card-title text-center">WELCOME BACK!</h1>
                    <h6 class="card-title text-center">Please login to explore and purchase exciting books.</h6>

                    <!-- login form -->
                    <form id="loginForm" class="mt-5">
                        <div class="form-group mb-3">
                            <!-- user-name -->
                            <label for="username" class="form-label">Username</label>
                            <input type="text" class="form-control" id="username" name="UserName" required>
                            <div class="invalid-feedback">
                                Please enter a valid user-name
                            </div>
                        </div>
                        <div class="form-group mb-3">
                            <!-- password -->
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control" id="password" name="Password" required>
                            <span class="field-icon">
                                <!-- toggles to show password as text or as dots -->
                                <i class="fa fa-eye" onclick="togglePasswordVisibility()" id="togglePassword"></i>
                            </span>
                            <div class="invalid-feedback">
                                Please enter a valid password
                            </div>
                        </div>
                        <!-- submit button -->
                        <button type="submit" class="btn btn-danger col-12" onclick="loginToSite(event)">Login</button>
                    </form>

                    <!-- redirects to registration page -->
                    <p class="mt-3 mb-5 text-center">Don't have an account? <a asp-controller="Register"
                            asp-action="Index">Register
                            here</a></p>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts {
    <script src="~/assets/js/togglePasswors.js"></script>
    <script src="~/assets/js/login.js"></script>
}

@{
    ViewData["Title"] = "Register";
    Layout = "_UserAuthLayout";
}

<div class="container">
    <div class="row justify-content-center align-items-center" style="height: 100vh">
        <div class="col-md-8">
            <div class="card" style="border-radius: 25px;">
                <!-- Logo -->
                <div class="text-center mt-3">
                    <!-- redirects to the home page -->
                    <a href="@Url.Action("Index", "Home")">
                        <img src="~/assets/images/general/appLogo.png" alt="Logo" style="max-width: 200px;">
                    </a>
                </div>

                <div class="card-body">
                    <!-- Welcome text and subtitle -->
                    <h2 class="card-title text-center">JOIN US TODAY!<h2>
                            <h6 class="card-title text-center">Create an account to unlock a world of exciting books.
                            </h6>

                            <!-- register form -->
                            <form id="registrationForm" class="mt-5">
                                <div class="row mb-3">
                                    <!-- First Name -->
                                    <div class="col-md-6">
                                        <label for="firstName" class="form-label">First Name</label>
                                        <input type="text" class="form-control item" id="firstName" name="FirstName"
                                            required>
                                        <div class="invalid-feedback">
                                            Please enter a valid first name
                                        </div>
                                    </div>
                                    <!-- Last Name -->
                                    <div class="col-md-6">
                                        <label for="lastName" class="form-label">Last Name</label>
                                        <input type="text" class="form-control item" id="lastName" name="LastName"
                                            required>
                                        <div class="invalid-feedback">
                                            Please enter a valid last name
                                        </div>
                                    </div>
                                </div>
                                <!-- User-Name -->
                                <div class="form-group mb-3">
                                    <label for="username" class="form-label">Username</label>
                                    <input type="text" class="form-control item" id="username" name="UserName" required>
                                    <div class="invalid-feedback">
                                        Please enter a valid user-name
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <!-- First Name -->
                                    <div class="col-md-6">
                                        <label for="email" class="form-label">Email Address</label>
                                        <input type="email" class="form-control item" id="email" name="Email" required>
                                        <div class="invalid-feedback">
                                            Please enter a valid email address
                                        </div>
                                    </div>
                                    <!-- Last Name -->
                                    <div class="col-md-6">
                                        <label for="phone" class="form-label">Phone Number</label>
                                        <input type="tel" class="form-control item" id="phone" name="PhoneNumber"
                                            pattern="[0-9]{10}" required>
                                        <small class="text-muted">Please enter a 10-digit phone number.</small>
                                        <div class="invalid-feedback">
                                            Please enter a valid phone number
                                        </div>
                                    </div>
                                </div>
                                <!-- Password -->
                                <div class="form-group mb-3">
                                    <label for="password" class="form-label">Password</label>
                                    <input type="password" class="form-control item" id="password" name="Password"
                                        minlength="8" required>
                                    <span class="field-icon">
                                        <!-- toggles to show password as text or as dots -->
                                        <i class="fa fa-eye" onclick="togglePasswordVisibility()"
                                            id="togglePassword"></i>
                                    </span>

                                    <small class="text-muted">Password should have at least 8 characters.</small>
                                    <div class="invalid-feedback">
                                        Please enter a valid password
                                    </div>
                                </div>

                                <!-- submits the registration form -->
                                <button type="submit" class="btn btn-danger col-12"
                                    onclick="saveUserDetails(event)">Register</button>

                            </form>

                            <!-- redirects to login page -->
                            <p class="mt-3 text-center">Already have an account? <a asp-controller="Login"
                                    asp-action="Index">Login
                                    here</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/assets/js/togglePasswors.js"></script>
    <script src="~/assets/js/register.js"></script>
}
